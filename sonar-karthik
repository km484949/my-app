pipeline{
	agent {
	    node{
	        label 'slave1'
	    }
	}
	stages{
		stage('git checkout stage') {
			steps{
				git 'https://github.com/Kirankmane/onlinebookstore-java-war.git'
				echo "scm checkout stage success"
				}
			}
     }
      
 		stage('build stage') {
				stage('first buils stage') {
					steps{
						sh 'mvn clean install'
						echo "first build is success"
						sh 'sleep 20'
						}
					}
         }
   
   stage('SonarQube Analysis') {
        def mvnHome =  tool name: 'maven-3', type: 'maven'
        withSonarQubeEnv('sonar1') { 
          sh "${mvnHome}/bin/mvn sonar:sonar"
        }
    }
   
   stage('Email Notification'){
      mail bcc: '', body: '''Hi Welcome to jenkins email alerts
      Thanks
      Hari''', cc: '', from: '', replyTo: '', subject: 'Jenkins Job', to: 'karthikmurugesh08@gmail.com'
   }
   stage('Slack Notification'){
       slackSend baseUrl: 'https://hooks.slack.com/services/',
       channel: '#jenkins-pipeline-demo',
       color: 'good', 
       message: 'Welcome to Jenkins, Slack!', 
       teamDomain: 'javahomecloud',
       tokenCredentialId: 'slack-demo'
   }

}
